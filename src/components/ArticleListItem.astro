---
export interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  tags?: string[];
  author?: string;
  location?: string;
  slug: string;
}

const { title, description, pubDate, updatedDate, tags, author, location, slug } = Astro.props;

// Change date format to single line compact format
const formattedDate = new Intl.DateTimeFormat('en-US', {
  year: 'numeric',
  month: 'short',
  day: '2-digit',
  formatter: 'short'
}).format(pubDate);

const hasUpdated = updatedDate && updatedDate > pubDate;
---

<article class="py-6 first:pt-0 border-b border-sky-200 dark:border-sky-700">
  <div class="grid grid-cols-1 gap-2 md:grid-cols-[90px_1fr] md:items-baseline">
    <!-- Date column - single line display -->
    <div class="text-sky-500 dark:text-sky-400 text-sm font-normal text-right pr-3 whitespace-nowrap">
      {formattedDate}
    </div>
    
    <!-- Content column -->
    <div>
      <!-- Title -->
      <h2 class="text-xl font-bold mb-2 leading-snug">
        <a href={`/blog/${slug}`} class="hover:text-cyan-600 dark:hover:text-cyan-400">
          {title}
        </a>
      </h2>
      
      <!-- Tags -->
      {tags && tags.length > 0 && (
        <div class="flex flex-wrap gap-1.5 mb-3">
          {tags.map(tag => (
            <a 
              href={`/tags/${tag.toLowerCase().replace(/\s+/g, '-')}`}
              class="text-xs text-sky-500 dark:text-sky-400 hover:text-cyan-600 dark:hover:text-cyan-400"
            >
              #{tag}
            </a>
          ))}
        </div>
      )}
      
      <!-- Description -->
      <p class="text-sky-600 dark:text-neutral-300 mb-3 text-sm">
        {description}
      </p>
      
      <!-- Footer -->
      <div class="flex items-center justify-between text-xs">
        <span class="text-neutral-500 dark:text-neutral-400">
          {author && `By ${author}`} {location && `at ${location}`}
        </span>
        
        <a 
          href={`/blog/${slug}`}
          class="text-cyan-600 dark:text-cyan-400 hover:underline"
        >
          Read more â†’
        </a>
      </div>
    </div>
  </div>
</article> 